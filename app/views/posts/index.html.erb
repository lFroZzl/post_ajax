<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<!-- new -->
<button type="button" class="btn btn-dark btn-sm" data-toggle="modal" data-target="#newPostModal">
  New Post
</button>

<!-- Search -->
<div class="mt-3">
  <%= form_tag(posts_path, method: "get", remote: true, class: 'form-inline') do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search in post", class: "form-control" %>
    <%= submit_tag "Buscar", class: 'btn btn-primary' %>
  <% end %>
</div>


<!-- List -->
<div class="row my-3" id="postList">
  <%= render @posts %>
</div>

<!-- Modal New Post -->
<%= form_for(@post, remote: true) do |form| %>
<div class="modal fade" id="newPostModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title">Post</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :content %>
          <%= form.text_area :content, class: "form-control" %>
        </div>
      </div>
      <div class="modal-footer">
        <%= form.submit "Save", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
<% end %>
